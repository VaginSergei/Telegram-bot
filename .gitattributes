# Auto detect text files and perform LF normalization
* text=auto
pip3 install pytelegrambotapi
import telebot
from telebot import types

bot = telebot.TeleBot('5980008665:AAH3GvV9KsY2LS6QzrWyBKIS7TDPVOSciMA')

@bot.message_handler(commands=['start'])
def start(message):

    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è")
    markup.add(btn1)
    bot.send_message(message.from_user.id, "üëã –ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç-–≥–µ–Ω–µ—Ä–∞—Ç–æ—Ä!", reply_markup=markup)

@bot.message_handler(content_types=['text'])
def get_text_messages(message):

    if message.text == 'üëã –ü–æ–∑–¥–æ—Ä–æ–≤–∞—Ç—å—Å—è':
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True) 
        btn1 = types.KeyboardButton('–ö–∞–∫ —Ä–∞–±–æ—Ç–∞–µ—Ç –±–æ—Ç')
        btn2 = types.KeyboardButton('–¢–∞—Ä–∏—Ñ—ã')
        btn3 = types.KeyboardButton('–ü–æ–º–æ—â—å')
        markup.add(btn1, btn2, btn3)
        bot.send_message(message.from_user.id, '‚ùì –ó–∞–¥–∞–π—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å', reply_markup=markup) 


    elif message.text == '–ö–∞–∫ —Ä–∞–±–æ—Ç–∞–µ—Ç –±–æ—Ç':
        bot.send_message(message.from_user.id, '–í—ã –≤—ã–±–∏—Ä–∞–µ—Ç–µ —Ç–∏–ø –≥–µ–Ω–µ—Ä–∞—Ü–∏–∏(–∫–∞—Ä—Ç–∏–Ω–∫–∞/—Ç–µ–∫—Å—Ç), –∑–∞—Ç–µ–º –≤—ã–±–∏—Ä–∞–µ—Ç–µ –Ω–µ–π—Ä–æ—Å–µ—Ç—å –≤ –∫–æ—Ç–æ—Ä–æ–π —Ö–æ—Ç–∏—Ç–µ —Å–¥–µ–ª–∞—Ç—å —ç—Ç–æ. –ü–∏—à–µ—Ç–µ —Å–ª–æ–≤–æ –∏–ª–∏ —Å—Ç–∏–ª—å(–≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç—Ç–æ–≥–æ —á—Ç–æ –≤—ã –≤—ã–±—Ä–∞–ª–∏)', parse_mode='Markdown')

    elif message.text == '–¢–∞—Ä–∏—Ñ—ã':
        bot.send_message(message.from_user.id, '–ü–µ—Ä–≤—ã–µ —Ç—Ä–∏ –∑–∞–ø—Ä–æ—Å–∞ –±–µ—Å–ø–ª–∞—Ç–Ω—ã–µ, –ø–æ—Å–ª–µ–¥—É—é—â–∏–µ —É–∂–µ –ø–ª–∞—Ç–Ω—ã. –¢–∞—Ä–∏—Ñ—ã: 1 –∑–∞–ø—Ä–æ—Å - $ 2 –∑–∞–ø—Ä–æ—Å–∞ - $$', parse_mode='Markdown')

    elif message.text == '–ü–æ–º–æ—â—å':
        bot.send_message(message.from_user.id, '–í —Å–ª—É—á–∞–µ –Ω–µ–ø–æ–ª–∞–¥–æ–∫ –æ–±—Ä–∞—Ç–∏—Ç–µ—Å—å –ø–æ –Ω–æ–º–µ—Ä—É 89045566778921', parse_mode='Markdown')
 

bot.polling(none_stop=True, interval=0)
